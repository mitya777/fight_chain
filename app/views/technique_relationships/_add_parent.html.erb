<%= form_for child.reverse_technique_relationships.build  do |tech_rel_form|%>
  <%= hidden_field_tag 'origin', child.id %> <!-- this is so we know where to redirect after create action -->
  <%= tech_rel_form.hidden_field :child_id %>
  <%= tech_rel_form.collection_select :parent_id, select_parents, :id, :name, :prompt => true %>
  <%= tech_rel_form.submit "Add Parent" %>
<% end %>
